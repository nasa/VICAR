#define gtc(pf)	(0 < (pf)->_nleft ? (--(pf)->_nleft, *(pf)->_pnext++ & BYTMASK) \
	: getc(pf))
#define ptc(pf, c) ((pf)->_nleft < 512 ? (pf)->_buf[(pf)->_nleft++] = (c) \
