	@echo " "                                              @@\
	@echo "     Building program..."                       @@\
	                                                       @@\
program:: objlist $(DEPLIBS)                               @@\
	@-if test '$(FORT)' = ftn; then \                      @@\
		echo "ld objlist $(LINKLIBS) -o program..."; \     @@\
		ld objlist $(LINKLIBS) -o program; \               @@\
