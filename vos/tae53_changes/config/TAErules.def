#ifndef DependCTarget
#define DependCTarget()                                          @@\
depend::                                              @@\
	@echo " "                                                        @@\
	@echo "     Making depends..."                                   @@\
	$(DEPEND) -s "# DO NOT DELETE" -- $(DEPENDCFLAGS) -- $(SRCS)    @@\
	@echo "     Finished making depends."                            @@\
