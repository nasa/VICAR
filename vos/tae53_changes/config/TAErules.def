	@echo "     Making depends..."                                   @@\
	$(DEPEND) -s "# DO NOT DELETE" -- $(DEPENDC++FLAGS) -- $(C++SRCS) @@\
	@echo "     Finished making depends."                            @@\
	@echo " "
#endif /* DependCplusplusTarget */

#ifndef ComplexDependTarget
#define ComplexDependTarget()                                          @@\
depend::                                            @@\
	@echo " "                                                        @@\
	@echo "     Making depends..."                                   @@\
	$(DEPEND) -s "# DO NOT DELETE" -- $(DEPENDC++FLAGS) -- $(C++SRCS) @@\
